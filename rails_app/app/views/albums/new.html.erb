    <div class="container content-block-photo" >
      <div class="row">
        <h3><b style="font-size: 20px;">New Album</b> </h3>
        <hr style="width: 900px; border: 1.5px solid #f2f2f2;">
        <div class="col-sm-6 col-md-6 col-lg-12">
           <%= form_for  @albums,:html => { :multipart => true }  do |f| %>
                <div class="row">
                    <div class="col-sm-6">
                  
                        <div class="form-group tit">
                         <%= f.label :title, "Title" %><br>
                        <%= f.text_field :title, class: 'form-control'%>
                        </div> 
                         <div class="form-group">
                             <%= f.label :title, "Sharingmode" %><br>
                              <%= f.select :status, [['Public', true], ['Private', false]],class: 'form-control'  %>
                            </select>
                         </div>    
                    </div>
                   <div class="col-sm-6">
                    <div class="form-group ">
                     <%= f.label :description, "Description" %><br>
                    <%= f.text_field :description, class: 'form-control', id: 'descrip' %>
                      </div>
                   </div>
                    <div class="form-group ">
                      <%= f.file_field :source %>
                  </div>
                   </div>
                <div class="action">
                  <%= f.submit class: "btn btn-primary" %>
                </div>
                </div>
                <%end%>
             </div>
    </div>

