                  <li class="nav-item ">
                    <a href="<%= photo_path(current_user) %>" class="nav-link"><%=current_user.firstname%></a>
                  <%end%>
                </li>
            </ul>
            <ul class="navbar-nav">
               <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item ">
              <%= link_to "Log out", destroy_user_session_path, :method=>'delete', class: 'nav-link'%>
