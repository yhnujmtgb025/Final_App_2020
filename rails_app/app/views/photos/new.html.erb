    <div class="container content-block-photo" >
      <div class="row">
        <h3><b style="font-size: 20px;">New Photo</b> </h3>
        <hr style="width: 900px; border: 1.5px solid #f2f2f2;">
        <div class="col-sm-6 col-md-6 col-lg-12">
          
                <div class="row">
                    <div class="col-sm-6">
                   <%= form_for @images,:html => { :multipart => true }  do |f| %>
                        <div class="form-group tit">
                         <%= f.label :title, "Title" %><br>
                        <%= f.text_field :title, class: 'form-control'%>
                        <%# <label for="exampleFirstName"><strong>Title</strong></label>
                        <input type="email" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Photo title"> %>
                        </div> 
                         <div class="form-group">
                            <%# <label for="exampleFormControlSelect1">Sharing mode</label> %>
                            <%# <select class="form-control" id="sharing"> %>
                             <%= f.label :title, "Sharingmode" %><br>
                              <%= f.select :status, [['Public', true], ['Private', false]],class: 'form-control'  %>
                                <%# <option>Public</option>
                                <option>Private</option> %>
                            </select>
                         </div>    
                    </div>
                   <div class="col-sm-6">
                    <div class="form-group ">
                     <%= f.label :description, "Description" %><br>
                    <%= f.text_field :description, class: 'form-control', id: 'descrip' %>
                        <%# <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="descrip" rows="3"></textarea> %>
                      </div>
                   </div>
                    <div class="form-group ">
                      <%= f.file_field :source %>
                  </div>
                   </div>
                <div class="action">
                  <%= f.submit class: "btn btn-primary" %>
                </div>
                </div>
                <%end%>
             </div>
                 
              
              
  
    </div>

