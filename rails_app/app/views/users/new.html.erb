     <div class="container">
      <h2 >Fotobook Signup</h2>
       <div class="row justify-content-center index-page">
          <div class="card" id="card-logo">
            <div class="card-body">
              <img src="/Img/Google.png">
              <img src="/Img/FB.jpg">
              <img src="/Img/Twitter.png">
            </div>
          </div>
       </div>  
          <div class="row justify-content-center index-page">
                <div class="card" id="card-login">
                  <div class="card-body">
                <%= form_for @user do |f| %>
                    <div class="form-group">
                     <%= f.label :firstname, "Firstname"%>
                     <%= f.text_field :firstname,class: "form-control" %>
                      <%# <label for="exampleFirstName"><strong>First Name</strong></label> %>
                      <%# <input type="firstname" class="form-control" id="exampleFirstName" aria-describedby="emailHelp" placeholder="First name"> %>
                    </div>
                    <div class="form-group">
                    <%= f.label :lastname, "Lastname"%> 
                    <%= f.text_field :lastname,class: "form-control"%>
                      <%# <label for="exampleLastName"><strong>Last Name</strong></label> %>
                      <%# <input type="lastname" class="form-control" id="exampleLastName" placeholder="Last name"> %>
                    </div>
                     <div class="form-group">
                     <%= f.label :email, "Email"%>
                      <%= f.email_field :email,class: "form-control" %>
                      <%# <label for="exampleEmail"><strong>Email</strong></label> %>
                      <%# <input type="email" class="form-control" id="exampleNewPassword" placeholder="Email"> %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, "Password"%> 
                      <%= f.password_field :password,class: "form-control" %>
                      <%# <label for="examplePassword"><strong>Password</strong></label> %>
                      <%# <input type="password" class="form-control" id="examplePassword" placeholder="Password"> %>
                    </div>
                    <div class="form-group">
                      <%= f.label :confirpassword, "Confirpassword"%>
                      <%= f.password_field :password_confirmation,class: "form-control" %>
                      <%# <label for="Password Confirmation"><strong>Password Confirmation</strong></label> %>
                      <%# <input type="confirpassword" class="form-control" id="Password Confirmation" placeholder="Password Confirmation"> %>
                    </div>
                    <div class="text-center">
                       <%=f.submit "Sign Up",:class => "btn sign-up" %>
                    </div>
                  </div>
                  <%end%>
                </div>
          </div>
     </div>