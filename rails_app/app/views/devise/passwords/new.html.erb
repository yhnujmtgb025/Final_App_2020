     <div class="container sign">
      <h2 >Fotobook Signup</h2>
       <div class="row justify-content-center index-page">
          <div class="card" id="card-logo">
            <div class="card-body">
              <img src="/Img/Google.png">
              <img src="/Img/FB.jpg">
              <img src="/Img/Twitter.png">
            </div>
          </div>
       </div>  
          <div class="row justify-content-center index-page" >
                <div class="card" id="card-login">
                  <div class="card-body">
                     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                      <%= f.label :email,"Email" %>
                       <%= f.email_field :email,  autofocus: true, autocomplete: "email",class: 'form-control' %>
                      <%# <label for="exampleNewPassword"><strong>New Password</strong></label>
                      <input type="password" class="form-control" id="exampleNewPassword" placeholder="New Password"> %>
                    </div>
                   
                    <div class="text-center">
                     <%= f.submit "Send",class: 'btn sign-up' %>
                      <%# <button type="submit" class="btn sign-up">Sign Up</button> %>
                    </div>
                    <% end %>
                  </div>
                </div>
          </div>
     </div>



